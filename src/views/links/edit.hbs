<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="title..." autofocus value="{{links.title}}" >
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="url..." value="{{links.url}}" >
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description...">{{links.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>