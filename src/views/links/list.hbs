<div class="container p-4">
    <div class="row">
        {{#each links}} <!-- Se hace un loop por el objeto recibido -->
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <a href="" class="btn btn-danger">Delete Link</a>
                        <a href="" class="btn btn-secondary">Edit link</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>